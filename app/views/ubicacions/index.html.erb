<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">
		<div class="panel-title">
		Ubicaciones
		</div>
	</div>
	<div class="panel-body">
		<table class="table table-condensed table-hover">
		  <thead>
		    <tr>
		      <th>Descripcion</th>
		      <th>Localidad</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @ubicacions.each do |ubicacion| %>
		      <tr>
		        <td><%= ubicacion.descripcion %></td>
		        <td><%= ubicacion.localidad.descripcion %></td>
		        <td><%= link_to 'Show', ubicacion %></td>
		        <td><%= link_to 'Edit', edit_ubicacion_path(ubicacion) %></td>
		        <td><%= link_to 'Destroy', ubicacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
	<div class="panel-footer">
		<%= link_to 'Nueva Ubicacion', new_ubicacion_path %> |
		<%= link_to 'Regresar', archivo_path %>
	</div>
</div>

